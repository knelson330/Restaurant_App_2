WindowManager:
	LoginWindow:
	CreateAccountWindow:
	SecondWindow:
	Lunch_Menu:
	Dinner_Menu:

<DragLabel>:
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_timeout: 10000000
    drag_distance: 0

<LoginWindow>:
	name: "login"

	email:email
	password:password

	FloatLayout:

		Label:
			text: "Email: "
			pos_hint: {"x":0.1, "top":0.9}
			size_hint: 0.4, 0.15

		TextInput:
			id: email
			multiline: False
			pos_hint: {"x": 0.45, "top":0.9}
			size_hint: 0.4, 0.15

		Label:
			text: "Password: "
			pos_hint: {"x": 0.1, "top": 0.7}
			size_hint:0.35, 0.15

		TextInput:
			id: password
			password: True #Hides password as entering
			pos_hint: {"x": 0.45, "top":0.7}
			size_hint: 0.4, 0.15
			multiline: False

	Button:
		text: "Login"
		pos_hint: {"x": 0.2, "y": 0.3}
		size_hint: 0.6, 0.2
		on_release: 
			root.verify_credentials() if password.text == "password" and email.text == "username" else "login"
			root.manager.transition.direction = "left"

	Button:
		text: "Create an Account"
		pos_hint: {"x": 0.2, "y": 0.1}
		size_hint: 0.6, 0.2
		on_release: 
			app.root.current = "create"
			root.manager.transition.direction = "right"

<CreateAccountWindow>
	name: "create"

	namee:namee
	email:email
	password:password

	FloatLayout:

		Label:
			text: "Email: "
			pos_hint: {"x":0.1, "top":0.9}
			size_hint: 0.4, 0.15

		Label:
			text: "Name: "
			pos_hint: {"x":0.1, "top":0.75}
			size_hint: 0.4, 0.15

		TextInput:
			id: namee
			multiline: False
			pos_hint: {"x": 0.45, "top":0.75}
			size_hint: 0.4, 0.15

		TextInput:
			id: email
			multiline: False
			pos_hint: {"x": 0.45, "top":0.9}
			size_hint: 0.4, 0.15

		Label:
			text: "Password: "
			pos_hint: {"x": 0.1, "top": 0.7}
			size_hint:0.35, 0.15

		TextInput:
			id: password
			password: True #Hides password as entering
			pos_hint: {"x": 0.45, "top":0.7}
			size_hint: 0.4, 0.15
			multiline: False

		Button:
			text: "Create an Account"
			pos_hint: {"x": 0.2, "y": 0.1}
			size_hint: 0.6, 0.2
			on_release: root.login()

<SecondWindow>:
