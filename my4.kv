			app.root.current = "lunch_menu"
			root.manager.transition.direction = "left"
	Button:
		size_hint: 0.9,0.33
		pos_hint: {"x":0.05, "top":0.67}
		text: "Dinner Menu"
		on_release:
			app.root.current = "dinner_menu"
			root.manager.transition.direction = "left"

	Button:
		size_hint: 0.9,0.33
		pos_hint: {"x":0.05, "top":0.34}
		text: "Go Back"
		on_release: 
			app.root.current = "login"
			root.manager.transition.direction = "right"

